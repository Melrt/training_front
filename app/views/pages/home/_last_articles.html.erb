<div class="last-articles-section container mb-4">
	<%= content_tag :h2, t('.our_last_articles'), class: "my-4" %>
	<div class="row row-cols-1 row-cols-md-3 g-4">
		<% articles.each do |article| %>
		  <div class="col">
		    <div class="card h-100">
		      <%= image_tag article.image_url, alt: "", class: "card-img-top" %>
		      <div class="card-body">
		      	<div class="d-flex d-xl-flex d-md-block justify-content-between align-items-center">
		      		<%= content_tag :p, article.category, class: "badge bg-light text-dark" %>
		      		<%= article.published_on %>
		      	</div>
		        <%= content_tag :h5, article.title, class: "card-title" %>
		        <%= content_tag :p, article.content, class: "card-text" %>
		      </div>
		    </div>
		  </div>
		<% end -%>
	</div>
</div>
