<div class="mt-5 p-5 bg-primary bg-opacity-25 h-100 text-center">
  <h1>La Start-Up</h1>
  <p>Vous propose un dossier de crédit pour vous</p>
</div>
<div class="container w-75">
  <%= simple_form_for @form do |f| %>
    <h2 class="text-center my-5">Informations personnelles</h2>
    <div class="row">
      <div class="col-12 col-md-6 my-3">
        <%= f.input :first_name %>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.input :last_name %>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.input :birth_date %>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.input :birthplace %>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.label :nationality %>
        <%= f.country_select :nationality %>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.label :matrial_status %>
        <%= f.select :matrial_status, Form::MATRIAL_STATUS %>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.input :email %>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.input :address %>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.input :city %>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.input :zipcode %>
      </div>
    </div>

    <h2 class="text-center my-5">Informations financières</h2>
    <div class="row">
      <div class="col-12 col-md-6 my-3">
        <%= f.input :bic %>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.input :iban %>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.input :identity_proof, input_html: { class: 'form-control', type: 'file' } %>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.input :address_proof, input_html: { class: 'form-control', type: 'file' } %>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.input :bank_account_details, input_html: { class: 'form-control', type: 'file' } %>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.input :estate %>
      </div>
    </div>

    <h2 class="text-center my-5">Informations contractuelles</h2>
    <div class="row">
      <div class="col-12 col-md-6 my-3">
        <%= f.input :annual_net_salary %>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.label :contract_type %>
        <div class="form-select">
          <%= f.select :contract_type, Form::CONTRACT_TYPE %>
        </div>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.input :pay_slips, input_html: { class: 'form-control', type: 'file' } %>
      </div>
      <div class="col-12 col-md-6 my-3">
        <%= f.input :contract, input_html: { class: 'form-control', type: 'file' } %>
      </div>
    </div>
    <div class="text-center p-5">
      <%= f.button :submit, 'Envoyer', class: 'btn btn-secondary' %>
    </div>
   <% end %>
</div>